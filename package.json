{
	"name": "@clv-factory/protobuf",
	"version": "0.56.0",
	"license": "MIT",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"./dist"
	],
	"publishConfig": {
		"@clv-factory:registry": "http://gitlab.cyberlogitec.com.vn/api/v4/projects/727/packages/npm/"
	},
	"scripts": {
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"build": "rimraf dist && tsc",
		"build:prod": "rimraf dist && tsc -p ./tsconfig.build.json && tscpaths -p ./tsconfig.build.json -s ./src -o ./dist && ./scripts/copy_grpc.sh",
		"test": "jest --config ./test/jest.json --runInBand --detectOpenHandles --no-cache",
		"generate:proto": "buf generate --debug",
		"buf:format": "buf format . -w --debug",
		"buf:lint": "buf lint . --debug",
		"buf:build": "buf build ./src --debug",
		"buf:generate": "buf generate --template ./src/buf.gen.yaml",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"lint:fix": "eslint --ext .ts,.tsx '{src,test}/**/*.ts' --fix --no-error-on-unmatched-pattern",
		"lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\"",
		"lint:tsc": "tsc --project ./tsconfig.json",
		"lint:report": "eslint-output \"{src,apps,libs,test}/**/*.ts\"",
		"npm:local": "cross-env NPM_CONFIG_TOKEN=local",
		"preinstall": "npx husky install || exit 0"
	},
	"dependencies": {
		"@grpc/grpc-js": "^1.8.20",
		"@grpc/proto-loader": "^0.7.11",
		"@nestjs/common": "^10.1.2",
		"@nestjs/config": "^3.0.0",
		"@nestjs/microservices": "^10.3.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"lodash": "^4.17.21",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@bufbuild/buf": "^1.32.1",
		"@commitlint/cli": "^17.6.7",
		"@commitlint/config-conventional": "^17.6.7",
		"@golevelup/ts-jest": "^0.4.0",
		"@nestjs/core": "^10.1.2",
		"@nestjs/testing": "^10.1.2",
		"@types/jest": "^29.5.3",
		"@types/lodash": "^4.14.196",
		"@types/node": "^20.4.5",
		"@typescript-eslint/eslint-plugin": "^6.2.0",
		"@typescript-eslint/parser": "^6.2.0",
		"commitizen": "^4.3.0",
		"commitlint-plugin-function-rules": "^2.0.2",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"env-cmd": "^10.1.0",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.9.0",
		"eslint-output": "^3.0.1",
		"eslint-plugin-prettier": "^5.0.0",
		"husky": "^8.0.3",
		"jest": "^29.6.2",
		"jest-junit": "^16.0.0",
		"lint-staged": "^13.2.3",
		"prettier": "^3.0.0",
		"rimraf": "^5.0.1",
		"ts-jest": "^29.1.1",
		"ts-proto": "^1.156.1",
		"tsconfig-paths": "^4.2.0",
		"tscpaths": "^0.0.9",
		"typescript": "^5.1.6"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"jest-junit": {
		"outputDirectory": "./report/unit",
		"outputName": "test-report.xml"
	}
}
